{
    "manifest_version": 2,
    "name": "UV Helper Script",
    "description": "Scripts for making life easier when using User Voice support ticket system",
    "version": "1",
    "icons": {
        "16": "img/horn_16.png",
        "48": "img/horn_48.png",
        "128": "img/horn_128.png"
    },
    "options_page": "options.html",
    "permissions": [
        "storage",
        "tabs",
        "http://*/*",
        "https://*/*"
    ],
    "background": {
        "scripts": ["js/optionsController.js"]
    },
    "browser_action": {
        "default_title": "UV Helper Scripts",
        "default_popup": "options.html"
    },
    "content_scripts": [
        {
            "matches": [
                "http://*.uservoice.com/*",
                "https://*.uservoice.com/*"
            ],
            "css": [
                "css/UVstyle.css"
            ],
            "js": [
                    "js/jquery.min.js",
                    "js/UVcontentScript.js",
                    "js/injectScript.js"
             ]
        }
    ],
    "web_accessible_resources": [
        "js/UVscript.js",
        "img/0.png",
        "img/1.png",
        "img/2.png",
        "img/3.png",
        "img/4.png",
        "img/5.png",
        "img/6.png",
        "img/7.png",
        "img/8.png",
        "img/9.png",
        "img/warning.png"
    ]
}
