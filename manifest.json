{
    "manifest_version": 2,
    "name": "UV Helper Scripts",
    "description": "Scripts for making life easier when using User Voice support ticket system",
    "version": "1",
    "icons": {
        "16": "Images/hammer-icon.png",
        "48": "Images/Farm-Fresh_hammer.png"
    },
    "options_page": "options.html",
    "permissions": [
        "storage",
        "tabs",
        "http://*/*",
        "https://*/*"
    ],
    "background": {
        "scripts": ["optionsController.js"]
    },
    "browser_action": {
        "default_title": "UV Helper Scripts",
        "default_popup": "options.html"
    },
    "content_scripts": [
        {
            "matches": [
                "http://*.uservoice.com/*",
                "https://*.uservoice.com/*"
            ],
            "css": [
                "UVstyle.css"
            ],
            "js": [
                    "jquery.min.js",
                    "UVcontentScript.js",
                    "injectScript.js"
             ]
        }
    ],
    "web_accessible_resources": [
        "UVscript.js",
        "Images/0.png",
        "Images/1.png",
        "Images/2.png",
        "Images/3.png",
        "Images/4.png",
        "Images/5.png",
        "Images/6.png",
        "Images/7.png",
        "Images/8.png",
        "Images/9.png",
        "Images/warning.png"
    ]
}
